{
	"scripts": {
		"prepare": "rm -r .git/hooks && mkdir -p .git/hooks && ln -s ../../../.git/modules/packages/chains/hooks .git/hooks && bun x simple-git-hooks",
		"bleed": "bun x npm-check-updates -u",
		"clean": "rm -rf .next && rm -rf node_modules",
		"format": "bun x biome format --write .",
		"lint": "bun x biome check .",
		"lint:fix": "bun x biome lint . --write --unsafe"
	},
	"name": "@rubriclab/chains",
	"version": "0.0.2",
	"main": "lib/index.ts",
	"private": false,
	"dependencies": {
		"@rubriclab/config": "*",
		"@rubriclab/package": "*",
		"zod": "latest"
	},
	"simple-git-hooks": {
		"post-commit": "bun run rubriclab-postcommit"
	},
	"publishConfig": {
		"access": "public"
	}
}
